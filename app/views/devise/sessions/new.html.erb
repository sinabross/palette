<!--로그인 화면-->
<section id="login">
  <div class="container">
    <div class="row">
    	<div class="col-md-6 col-md-offset-3">
    	  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        	<div class="form-wrap">
            <h1>로그인</h1>
            <!--Log in with your email account-->
            <form role="form" action="javascript:;" method="post" id="login-form" autocomplete="off">
              <div class="form-group">
                <%= f.label :이메일 %>
                <%= f.email_field :email, autofocus: true, class:"form-control" ,placeholder:"이메일을 입력하세요" %>
              </div>
              <div class="form-group">
                <%= f.label :비밀번호 %>
                <%= f.password_field :password, autocomplete: "off",class:"form-control",placeholder:"비밀번호를 입력하세요" %>
              </div>
                        
              <% if devise_mapping.rememberable? -%>
                <div class="checkbox">
                  <%= f.check_box :remember_me, class:"character-checkbox" %>
                  <%= f.label "자동 로그인", class:"label" %>
                </div> 
              <% end %>
              
              <div class="actions" id="btn-login">
                <%= f.submit "로그인", class:"btn btn-custom btn-lg btn-block"%>
              </div>
            
               <div>
                <%= link_to "페이스북으로 로그인", user_facebook_omniauth_authorize_path, class: "loginBtn loginBtn_facebook" %>
                <%= render "devise/shared/links" %>
              </div> 
              
            </form>
          <hr>
          </div>
        <% end %>
    	</div> <!-- /.col-xs-12 -->
    </div> <!-- /.row -->
  </div> <!-- /.container -->
</section>



<script>
  
  function showPassword() {
    
    var key_attr = $('#key').attr('type');
    
    if(key_attr != 'text') {
        
        $('.checkbox').addClass('show');
        $('#key').attr('type', 'text');
        
    } else {
        
        $('.checkbox').removeClass('show');
        $('#key').attr('type', 'password');
        
    }
    
}
</script>
