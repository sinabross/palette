<% if @list %>
  <%= will_paginate @list, :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12"%>
<% end %>

<% unless @result.blank? && @result2.blank?%>
  <%= will_paginate @result, :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12"%>
<%else%>
  <% if @result %>
    <%= will_paginate @result, :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12"%>
  <% end %>
  
  <% if @result2 %>
    <%= will_paginate @result2, :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12"%>
  <% end %>
<%end%>
  
<style>
  .flickr_pagination {
    text-align: center;
    padding: 0.3em;
    cursor: default; }
  .flickr_pagination a, .flickr_pagination span, .flickr_pagination em {
    padding: 0.2em 0.5em; }
  .flickr_pagination .disabled {
    color: #aaaaaa; }
  .flickr_pagination .current {
    font-style: normal;
    font-weight: bold;
    color: #ff0084; }
  .flickr_pagination a {
    border: 1px solid #dddddd;
    color: #0063dc;
    text-decoration: none; }
  .flickr_pagination a:hover, .flickr_pagination a:focus {
    border-color: #003366;
    background: #0063dc;
    color: white; }
  .flickr_pagination .page_info {
    color: #aaaaaa;
    padding-top: 0.8em; }
  .flickr_pagination .previous_page, .flickr_pagination .next_page {
    border-width: 2px; }
  .flickr_pagination .previous_page {
    margin-right: 1em; }
  .flickr_pagination .next_page {
    margin-left: 1em; }
</style>
