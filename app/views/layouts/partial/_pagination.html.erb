<!--제품요청목록-->
<% if @askfor %>
  <%= will_paginate @askfor,
                    :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12",
                    inner_window: 2, outer_window: 0,
                    :previous_label => '<', :next_label => '>'%>
<% end %>

<!--회원목록보기(관리자기능)-->
<% if @user %>
  <%= will_paginate @user,
                    :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12",
                    inner_window: 2, outer_window: 0,
                    :previous_label => '<', :next_label => '>'%>
<% end %>
<!--찜 목록보기(마이페이지)-->
<% if @like_list %>
  <%= will_paginate @like_list,
                    :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12",
                    inner_window: 2, outer_window: 0,
                    :previous_label => '<', :next_label => '>'%>
<% end %>

<!--제품 사용 후기-->
<% if @review %>
  <%= will_paginate @review,
                    :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12",
                    inner_window: 2, outer_window: 0,
                    :previous_label => '<', :next_label => '>'%>
<% end %>

<!--립스틱 제품 리스트-->
<% if @list %>
  <%= will_paginate @list,
                    :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12",
                    inner_window: 2, outer_window: 0,
                    :previous_label => '<', :next_label => '>'%>
<% end %>

<!--검색 결과 리스트 -->
<% unless @result.blank? && @result2.blank?%>
  <%= will_paginate @result,
                    :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12",
                    inner_window: 2, outer_window: 0,
                    :previous_label => '<', :next_label => '>'%>
<%else%>
  <% if @result %>
        <%= will_paginate @result,
                          :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12",
                          inner_window: 2, outer_window: 0,
                          :previous_label => '<', :next_label => '>'%>
  <% end %>
  
  <% if @result2 %>
        <%= will_paginate @result2,
                          :class => "flickr_pagination col-lg-12 col-md-12 col-xs-12 col-sm-12",
                          inner_window: 2, outer_window: 0,
                          :previous_label => '<', :next_label => '>'%>
  <% end %>
<%end%>
  
<style>
  .flickr_pagination {
    text-align: center;
    padding: 0.3em;
    cursor: default; }
  .flickr_pagination a, .flickr_pagination span, .flickr_pagination em {
    padding: 0.2em 0.5em; }
  .flickr_pagination .disabled {
    color: #aaaaaa; }
  .flickr_pagination .current {
    font-style: normal;
    font-weight: bold;
    color: #ff6666; }
  .flickr_pagination a {
    border: 1px solid #dddddd;
    color: #56565d;
    text-decoration: none; }
  .flickr_pagination a:hover, .flickr_pagination a:focus {
    border-color: lightgray;
    background: #ff6666;
    color: white; }
  .flickr_pagination .page_info {
    color: #aaaaaa;
    padding-top: 0.8em; }
  .flickr_pagination .previous_page, .flickr_pagination .next_page {
    border-width: 2px; }
  .flickr_pagination .previous_page {
    margin-right: 1em; }
  .flickr_pagination .next_page {
    margin-left: 1em; }
</style>
