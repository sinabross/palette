    $(function() {
      
        var wordCounts = {};
    
        $('#content').each(function() {
            var input = '#content'
            word_count(input);
    
            $(this).keyup(function() {
                word_count(input);
            })
    
        });
    
          function word_count(field) {
                  var number = 0;
                  var matches = $(field).val();
                  if (matches) {
                      number = matches.length;
                  }
                  wordCounts[field] = number;
                  var finalCount = 0;
                  $.each(wordCounts, function(k, v) {
                      finalCount += v;
                  });
                  $('#counter').val(finalCount+"/500")
              }    
    });
      
     
  
