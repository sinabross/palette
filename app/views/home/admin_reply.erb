<!--admin page : 댓글모아보기-->
    <div float="left" style="margin-top:30px; margin-left:30px;">
            <input type="button" value="회원목록" float="left" class="button" onclick="window.location='/home/admin_user';">
            <input type="button" value="회원댓글" class="button" float="left" onclick="window.location='/home/admin_reply';" >
    </div>
    
    <h3 align="center">회원댓글 모아보기</h3>
    
      <div class="container">
          <ul class="media-list forum">
            <!-- 리뷰db에서 상품num으로 불러오기 (p.어쩌구는 절대건드리지말것!!! db관련된거임!!) -->
            <% @review.each do |p| %>
              <li>
                <!-- 후기작성자정보(왼쪽)-->
                <div class="pull-left user-info" href="#" float="left">
                  <!-- 프로필사진(계절타입) -->
                  <img src="https://s3.ap-northeast-2.amazonaws.com/fourseasons111112/icon/detailpage/seasonicon/<%=p.userseason%>.png" width="64" style="margin-left:15px" >                        
                  <br/>
                  <!-- 작성자닉네임-->
                  <strong><center><a href="user.html"><%=p.username%></a></center></strong>
                  <!-- 작성자계절타입-->
                  <small><center><%=p.userseason%></center></small>
                </div>
                <!-- 리뷰본문(오른쪽) -->
                <div class="media" style="border: 0px solid lightgray; border-radius: 5px; padding:10px; background-color:#f5f5f5;">
                    <div class="col-md-12">
                      <div class="col-md-12" style="top:0px; right:0px; text-align:right;"><%= p.created_at.strftime("%Y-%m-%d") %></div>
                      <br>
                        <!-- 첨부된사진 -->  
                        <div class="col-md-12" style="margin-top:20px;">
                          <div class="col-md-9"><%=p.content %></div> 
                          <% unless p.img_url.nil? %>
                            <img src="<%= p.img_url %>" width="100%"> <!--사진 너무 대문짝만하게 나옴-->
                          <% end %>
                         
                        </div>
                        <!-- 후기내용 -->
    
                    </div><br>
                      <!-- 작성날짜 -->

                </div>
                <br>
              </li>
            <%end%>
            <br>
          </ul>
      </div>
  
  <style>
  
  .button {
    background-color: #4CAF50; /* Green */
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
}
  </style>