<!-- Page Content -->




<div class="content-section-a">

  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" >
        <h2 class="section-heading">새 소식</h2>
        <hr class="section-heading-spacer">
        <div class="clearfix"></div>

        <div class="container col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding:0px;">
          <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
            <table class="table user-list">
              <thead>
              <tr>
                <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2"><span>번호</span></th>
                <th class="col-lg-5 col-md-5 col-sm-3 col-xs-3"><span>제목</span></th>
                <th class="col-lg-2 col-md-2 col-sm-1 hidden-sm col-xs-1 hidden-xs"><span>작성자</span></th>
                <th class="col-lg-2 col-md-2 col-sm-3 col-xs-3"><span>작성일</span></th>
                <th class="col-lg-1 col-md-1 col-sm-2 col-xs-2"><span>조회수</span></th>
              </tr>
              </thead>
              <tbody style="text-align: left;">
              <% @news.each do |p| %>
                  <tr>
                    <td class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                      <p><%=p.id%></p>
                    </td>
                    <td class="col-lg-5 col-md-5 col-sm-3 col-xs-3">
                      <a href="/home/notice_view/<%=p.id%>"><%=p.title%></a>
                    </td>
                    <td class="col-lg-2 col-md-2 col-sm-1 hidden-sm col-xs-1 hidden-xs">
                      <%=p.name %>
                    </td>
                    <td class="col-lg-2 col-md-2 col-sm-3 col-xs-3">
                      <%=p.created_at.in_time_zone("Asia/Seoul").strftime("%y-%m-%d") %>
                    </td>
                    <td class="col-lg-1 col-md-1 col-sm-2 col-xs-2">
                      <%=p.hits %>
                    </td>

                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div style="text-align: center;">
          <a href="/home/notice" class="btn-black">전체보기</a>
        </div>
      </div>

    </div>

  </div>

</div>
<!-- /.container -->

</div>
<!-- /.content-section-a -->



