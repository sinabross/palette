<script>
    
      //제품 드롭다운
    $('#divNewNotifications li').on('click', function() { 
          $('#dropdown_title').html($(this).find('a').html());
        });
        
    //세부톤 드롭다운
    $('#divNewNotifications2 li').on('click', function() {
          $('#dropdown_title2').html($(this).find('a').html());
        });  
    
    //로그인 안한상태에서 후기쓰기 누르면 뜨는 안내메세지    
    $("#review_login").click(function(){
      alert("로그인 후 이용해주세요!");
    });	
    
    
   $('.like-button').on('click',function() {
                            
    
        var result = confirm('관심상품 리스트에 추가 되었습니다. 목록으로 이동 하시겠습니까?');

        if(result) {
           //yes
            location.replace('/home/basket');
        } else {
            //no
            location.reload();
        }
           
     });
    
    $('.unlike-button').on('click',function() {
                            
    
        var result = confirm('관심상품 리스트에서 제거 되었습니다.');

        if(result) {
           //확인
            location.reload();
        } 
           
     });                      
        
</script>