            <p class="lead">후기를 작성해보세요!</p>
              
            <div>
            <ul class="media-list forum">
                  
                <!-- from Review db -->
                <% @review.each do |p| %>
                <li class="media well">
               
                    <!-- User info -->
                    <div class="pull-left user-info" href="#" float="left">
                        <img class="avatar img-circle img-thumbnail" src="https://s3.ap-northeast-2.amazonaws.com/likelion1111/uploads/<%= p.userseason %>.png"
