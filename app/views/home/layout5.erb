                        <strong><center><a href="user.html"><%=p.username%></a></center></strong>
                        <small><center><%=p.userseason%></center></small>
                    </div>
                    <!-- User info END-->
                          
                    <!-- Review -->
                    <div class="media-body">
                        <!-- Image -->  
                        <img width="150px" src="<%= p.img_url %>">
        
                        <br><br>
                        <p><%=p.content %></p>
                        <p><%= p.created_at.strftime("%Y-%m-%d") %></p>
                    </div>
                    <!-- Review END -->
                </li>
                <%end%>
                <!--from Review db 끝--> 

            
            </ul>
            </div>
        </div>
              
