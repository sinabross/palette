                      <% if current_user.voted_up_on? @product %>
                       <div class="row">  
                        <div class="col-sm-1 unlike-button">
                        <%= link_to '', unlike_home_path(@product.num), remote: true,
                                                id: "#{@product.num}_like", 
                                                class: "like fa fa-heart" %>
                        </div>
                       </div>  
                   
                      <% else %>
                       
                        <div class="row"> 
                         <div class="col-sm-1 like-button">
